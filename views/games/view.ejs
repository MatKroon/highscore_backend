<!DOCTYPE html>
<html>
  <%- include('../includes/header.ejs'); %>
  <body>
    <%- include('../includes/navbar.ejs'); %>
    <div class="container">
      <div class="row game_display_row">
        <div class="col-md-6">
          <img class="view_img" src="<%= game.image_url %>" />
        </div>
        <div class="col-md-6">
          <h1><%= game.name %></h1>
          <p><%= game.description %></p>
        </div>
      </div>

      <h2 class="text-center">High Scores</h2>
      <div class="playerList">
        <% highscores.forEach(score => { %>

        <div class="card mb-3" style="max-width: 100%">
          <div class="row g-0">
            <div class="col-md-9">
              <div class="card-body">
                <h5 class="card-title">
                  <%= score.player.firstname %> <%= score.player.surname %>, <%=
                  score.date %>
                </h5>
              </div>
            </div>
            <div class="col-md-3">
              <h5 class="card-point"><%= score.points %></h5>
            </div>
          </div>
        </div>

        <% }) %>
      </div>
    </div>
  </body>
</html>
